<div class="container mt-2">
  <div class="row">
    <div class='mx-auto col-12 col-sm-12 col-lg-10 col-xl-12'>
      <h1>注文履歴一覧</h1>
       <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= l order.created_at %></td>
            <td><%= link_to admin_order_path(order.id) do %>
                  <%= order.name %>
                <% end %></td>
            <td><% @sum = 0 %>
                <% order.order_details.each do |order_details| %>
                <% @sum = order_details.amount + @sum %>
                <% end %>
                <%= @sum %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
