<h4>商品詳細</h4>
<% if @item.image.attached? %>
  <%= image_tag @item.image, size: '200x200' %>
<% else %>
  <%= image_tag 'no_image', size: '200,200' %>
<% end %>
  <h6>商品名</h6>
  <%= @item.name %>
  <h6>商品詳細</h6>
  <%= @item.introduction %>
  <h6>ジャンル</h6>
  <%= @item.genre.name %>
  <h6>税込価格<br>(税抜価格)</h6>
  <%= @item.add_tax_price.to_s(:delimited) %>
  (<%= @item.price %>)円
  <h6>販売ステータス</h6>
  <% if @item.is_active? %>
    <p>販売中</p>
  <% else %>
    <p>販売停止中</p>
  <% end %>
<%= link_to '編集する', edit_admin_item_path %>