<div class="container mt-2">
  <div class="row">
    <div class='mx-auto col-12 col-sm-12 col-lg-10 col-xl-12'>
      
      <h2>商品一覧</h2>
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus-circle"></i>
      <% end %><br>

      <% @items.each do |item| %>
        <%= item.id %>
        <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
        <% end %>
        <%= item.price %>
        <%= item.genre.name %>
        <% if item.is_active? %>
          <p>販売中</p>
        <% else %>
          <p>販売停止中</p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>