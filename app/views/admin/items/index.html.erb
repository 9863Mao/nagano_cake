<div class="container mt-2">
  <div class="row">
    <div class='mx-auto col-12 col-sm-12 col-lg-10 col-xl-12'>
      
      <h2>商品一覧</h2>
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus-circle text-secondary float-right h5"></i>
      <% end %><br>
      <table class="table mx-auto">
        <thead class="thead-light">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to admin_item_path(item.id) do %><%= item.name %><% end %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><% if item.is_active? %><p>販売中</p><% else %><p>販売停止中</p><% end %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
        </div>
      </div>
    </div>

    </div>
  </div>
</div>