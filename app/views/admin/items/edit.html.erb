<div class="container mt-2">
  <div class="row">
    <div class='mx-auto col-12 col-sm-12 col-lg-10 col-xl-12'>
      <h2>商品編集</h2>
      <%= form_with model: @item, url: admin_item_path  do |f| %>
        <label>商品画像</label>
        <%= f.file_field :image, accept: "image/*" %><br>
        <label>商品名</label>
        <%= f.text_field :name, autofocus: true %><br>
        <label>商品説明</label>
        <%= f.text_area :introduction %><br>
        <label>ジャンル</label>
        <%= f.collection_select( :genre_id, Genre.all, :id, :name) %><br>
        <label>税抜価格</label>
        <%= f.text_field :price %>円<br>
        <label>販売ステータス</label>
        <%= f.radio_button :is_active, :true, checked: true %>販売中
        <%= f.radio_button :is_active, :false %>販売停止中<br>
        <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</div>