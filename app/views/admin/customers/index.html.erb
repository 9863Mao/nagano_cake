<div class="container mt-2">
  <div class="row">
    <div class='mx-auto col-12 col-sm-12 col-lg-10 col-xl-12'>
      <h2>会員一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
           <% @customers.each do |customer| %>
            <tr>
            <td><%= customer.id %></td>
            <td><%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.last_name %>
                  <%= customer.first_name %>
                <% end %></td>
            <td><%= customer.email %></td>
            <td><% if customer.is_active == true %>
                  有効
                <% else %>
                  退会済み
                <% end %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>