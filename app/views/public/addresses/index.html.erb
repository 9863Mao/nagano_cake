<div class="container mt-2">
  <div class="row">
    <div class='mx-auto col-12 col-sm-12 col-lg-10 col-xl-12'>
      <h3>配送先登録/一覧</h3>
      <div class='col'>
        <%= form_with model: @address, url: public_addresses_path do |f| %>
          <div class='col-auto'>
            <labeL>郵便番号</labeL>
            <%= f.text_field :postal_code, class:"form-control" %>
          </div>
          <div class='col-auto'>
            <labeL>住所</labeL>
            <%= f.text_field :address, class:"form-control" %>
          </div>
          <div class='col-auto'>
            <labeL>宛名</labeL>
            <%= f.text_field :name, class:"form-control" %>
          </div>
            <%= f.submit '新規登録', class:"btn btn-success" %>
        <% end %>
      </div>
      <% @addresses.each do |address| %>
      <div >
        <label>郵便番号（ハイフンなし）</label>
        <%= address.postal_code %>
      </div>
      <div >
        <label>住所</label>
        <%= address.address %>
      </div>
      <div >
        <label>宛名</label>
        <%= address.name %>
      </div>
        <%= link_to "編集する", edit_public_address_path(address.id), class:"btn btn-success" %>
        <%= link_to "削除する", public_address_path(address.id), method: :delete %>
      <% end %>
    </div>
  </div>
</div>