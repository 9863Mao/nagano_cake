<div class='container'>
  <div class='row align-items-center'>
    <div class="col-sm-12 col-md-12 col-lg-5 px-5 px-sm-0">
      <h4><b>新規会員登録</b></h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field col-auto">
        <p>名前</p>
        <%= f.label :"(姓)", class: "col-form-label" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "family-name", :placeholder => "令和" %>
        <%= f.label :"(名)" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "given-name", :placeholder => "道子" %>
      </div>
      <div class="field col-auto">
        <%= f.label :"(セイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "レイワ" %>
        <%= f.label :"(メイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true, :placeholder => "ミチコ" %>
      </div>

      <div class="field col-auto">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com" %>
      </div>

      <div class="field col-auto">
        <%= f.label :郵便番号（ハイフンなし） %>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code", :placeholder => "0000000" %>
      </div>

      <div class="field col-auto">
        <%= f.label :住所 %>
        <%= f.text_area :address, autofocus: true, autocomplete: "street-address", :placeholder => "東京都渋谷区代々木神園町0-0", class: 'col-auto' %>
      </div>

      <div class="field col-auto">
        <%= f.label :電話番号 %>
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "tel", :placeholder => "00000000000" %>
      </div>

      <div class="field col-auto">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
          (<%= @minimum_password_length %>文字以上)
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field col-auto">
        <%= f.label :パスワード（確認用） %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br />
      </div>

      <div class="actions col-auto">
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
      <% end %>
      <h4><b>既に登録済みの方</b></h4>
      <p><%= link_to "こちら", new_customer_session_path %>　からログインしてください</p>
    </div>
  </div>
</div>