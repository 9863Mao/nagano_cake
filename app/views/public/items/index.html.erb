<div class="container mt-2">
  <div class="row">
    <div class='mx-auto col-12 col-sm-12 col-lg-10 col-xl-12'>
      <h3>商品一覧</h3><p>(全<%= @items.count %>件)</p>
      <% @items.each do |item| %>
        <%= link_to public_item_path(item.id) do %>
          <% if item.image.attached? %>
            <%= image_tag item.image, size: '150x100' %>
          <% else %>
            <%= image_tag 'no_image', size: '150x100' %>
          <% end %><br>
          <%= item.name %><br>
        <% end %>
        ￥<%= item.add_tax_price.to_s(:delimited) %>
      <% end %>
    </div>
  </div>
</div>