<div class="container mt-2">
  <div class="row">
    <div class='mx-auto col-12 col-sm-12 col-lg-10 col-xl-12'>
      <h4>注文履歴</h4>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.to_s(:datetime_jp) %></td>
            <td>〒<%= order.zip_code %><br><%= order.address + order.name %></td>
            <td><% order.items.each do |item| %>
                <p><%= item.name %></p>
                <% end %></td>
            <td><%= order.total_payment %></td>
            <td><%= order.status_i18n %></td>
            <td><%= link_to "表示する", public_order_path(order.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>